<script>
document.title = 'LX DMS | Adaptor 설정';
const commonUrl = '/common';
const url = '/adaptor';

let init_page = 1;				//초기 페이지
let page = 1;					//페이지
let init_size_per_page = 10;	//초기 개수
let size_per_page = 10;	 		//가져올 개수
let pageCount = 10;		 		//페이징에 나타낼 페이지 수

//분석 모델 기본정보 목록 조회
const dpIngestAdapter = function (page, size_per_page) {

	if(!page){
		page = init_page;
	}
	if(!size_per_page){
		size_per_page = init_size_per_page;
	}
	
	console.log('page : '+page+' , size_per_page : '+size_per_page );    
	let search_type = $("#search_type").val() != null ? $("#search_type").val() : '';
	let query = $("#query").val() != null ? $("#query").val() : '';
	
	const data = {
   		url: '/dp/ingest/adapter',
   		user_id: 'user00',	
   		menu_id: 'menu_id',
   		search: query,
   		search_type: search_type,
   		page_current: page,
    };		
    $.ajax({
        type: 'POST',
        url: url+'/dpIngestAdapter',
        dataType: 'json',
        contentType: 'application/json; charset-utf-8',
        data: JSON.stringify(data)
    }).done(function (data) {
    	
		  $("#dpIngestAdapter").empty();
	  	  if (data != null) {
  	    	$("#total_count").text(data.total_count);
  	    	
  	    	if(data.contents != ""){
  	    		
	     	    let insertTr = '';
	     	    let i = 0;	
		  	    $.each(data.contents, function (idx, el) {

	     	          insertTr += '<tr>';
	     		      insertTr += '	<td>'+(++i)+'</td>';
	     		      insertTr += ' <td><span class="blue bold" style="cursor:pointer" onclick=modModal("'+el.adapter_id+'");>'+isEmpty(el.adapter_nm)+'</span></td>';
	     		      insertTr += ' <td>'+isEmpty(el.adapter_type_nm)+'</td>';
	     		      insertTr += ' <td>';
	     		      insertTr += '	<button class="btn btn-sm btn-primary" onclick=operationView("'+ el.adapter_id +'")>운영</button>';
	     		      insertTr += '	<button class="btn btn-sm btn-primary" onclick=detailView("'+ el.adapter_id +'")>상세</button>';
	     		      insertTr += ' </td>';	     		      
	                  insertTr += ' <td>'+isEmpty(el.use_yn)+'</td>';
	                  insertTr += ' <td>'+isEmpty(el.instance_count)+'</td>';
	                  insertTr += '</tr>';
		  	    });
          	    $("#dpIngestAdapter").append(insertTr);
  	    	}
  	    	
  	    	//페이징 보여줌
  	    	paging(data.total_count, size_per_page, pageCount, page);
  	    	
	  	  }
    	  
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });	
}

//Adapter 유형 조회
const dpIngestAdapterType = function () {
	
	$("#adapter_type_id").empty();
	
    const data = {
   		url: '/dp/ingest/adapter/type',
    };		
    
    $.ajax({
        type: 'POST',
        url: commonUrl+'/dpIngestAdapterType',
        dataType: 'json',
        contentType: 'application/json; charset-utf-8',
        data: JSON.stringify(data)
    }).done(function (data) {
    	
	  	  if (data != null) {
		  	   	if(data.contents != ""){    	    	
   					 let selOp = '<option value="">선택</option>';  
	    	   		 $.each(data.contents, function (idx, el) {
 	    					selOp += '<option value='+el.adapter_type_id+'>' + el.adapter_type_nm + '</option>';
	 	     	     });
		 	     	 $("#adapter_type_id").append(selOp);        	
		  	   	}
	  	  }
    	  
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });
}

//Adapter ID 자동증가
const dpIngestAdapterIdChk = function(){
	
	$("#adapter_id").val("");
	
    const data = {
	   		url: '/dp/ingest/adapter/id/check',
	    };		
	    
	    $.ajax({
	        type: 'POST',
	        url: commonUrl+'/dpIngestAdapterIdChk',
	        dataType: 'json',
	        contentType: 'application/json; charset-utf-8',
	        data: JSON.stringify(data)
	    }).done(function (data) {
		  	  if (data != null) {
			  	   	if(data.contents != ""){    	
		    	   		 $.each(data.contents, function (idx, el) {
			    	   		$("#adapter_id").val(el.adapter_id);
		 	     	     });
			  	   	}
		  	  }
	    	  
	    }).fail(function (error) {
	        alert(JSON.stringify(error));
	    });
	    
	    
}

//Adapter 저장
const dpIngestAdapterSave = function(){
	
	if(!confirm('등록 하시겠습니까?')) {
	}else{
	    if($("#adapter_nm").val() == '') {
	        alert('Adapter명을 입력하세요!');
	        $("#adapter_nm").focus();
	        return;
	    }
	    
	    if($("#adapter_type_id").val() == '') {
	        alert('Adapter유형을 선택하세요!');
	        $("#adapter_type_id").focus();
	        return;
	    }
	    
		let use_yn = $("input[name='use_yn']:checked").val();
	    if($("input[name='use_yn']:checked").length < 1) {
	    	alert('사용 여부를 선택하세요!');
	        return;
	    }	 
	    
	    let adapter_id = $("#adapter_id").val();
	    
	    const data = {
	   		url: '/dp/ingest/adapter/save',
	   		adapter_id: adapter_id,	
	   		adapter_nm: $("#adapter_nm").val(),	
	   		adapter_type_id: $("#adapter_type_id").val(),	
	   		use_yn: use_yn,	
	   		user_id: 'user00',	
	   		menu_id: 'menu_id',
	    };		
	    
	    $.ajax({
	        type: 'POST',
	        url: url+'/imagesDatasetsEnroll',
	        dataType: 'json',
	        contentType: 'application/json; charset-utf-8',
	        data: JSON.stringify(data)
	    }).done(function (data) {
	    	
		  	  if (data != null) {
		  		
		  		let message = JSON.stringify(data.return_msg);
		  		alert(message.replace(/\"/gi, ''));
		  		closeModal();
		  		dpIngestAdapter(page, size_per_page);
		  		
		  	  }
	    	  
	    }).fail(function (error) {
	        alert(JSON.stringify(error));
	    });
	}
}

//Adapter 상세 조회
const dpIngestAdapterDt = function(adapter_id){
	
    const data = {
	   		url: '/dp/ingest/adapter/detail',
	   		adapter_id: adapter_id,	
	   		user_id: 'user00',	
	   		menu_id: 'menu_id',
	    };		
	    
	    $.ajax({
	        type: 'POST',
	        url: url+'/dpIngestAdapterDt',
	        dataType: 'json',
	        contentType: 'application/json; charset-utf-8',
	        data: JSON.stringify(data)
	    }).done(function (data) {
		  	  if (data != null) {
			  	   	if(data.contents != ""){    	
		    	   		 $.each(data.contents, function (idx, el) {
			    	   		$("#adapter_id").val(el.adapter_id);
			    	   		$("#adapter_nm").val(el.adapter_nm);
			    	   		$("#adapter_type_id").val(el.adapter_type_id);
			    //	   		$("#use_yn_"+el.use_yn).val(el.use_yn);
			    			alert(el.use_yn);
			    	   		$("input:radio[name='use_yn']:radio[value='"+el.use_yn+"']").prop('checked', true);
		 	     	     });
			  	   	}
		  	  }
	    	  
	    }).fail(function (error) {
	        alert(JSON.stringify(error));
	    });
	    
	    
}

//이미지 데이터셋 수정
