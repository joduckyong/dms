    }
}

//저장/수정 
const addSave = function(){
	
	if($('#save_type').val() == 'C'){
		//등록
		dpIngestAdapterSave();
	}else{
		//수정
		imagesDatasetsUpdate();
	}
}

//모달 등록창
const addModal = function(){
	
	initModal();
	dpIngestAdapterIdChk();
	dpIngestAdapterType();
	$('#modelLabel').text('Adapter 등록');
	$('#modalBtnLabel').text('저장');	
	$('#save_type').val('C');
	$('#btnDel').hide();
	$('#add_modal').modal('show');
}

//모달 수정창
const modModal = function(adapter_id){
	
	dpIngestAdapterDt(adapter_id);
	dpIngestAdapterType();
	$('#modelLabel').text('Adapter 수정');
	$('#modalBtnLabel').text('수정');	
	$('#save_type').val('U');
	$('#btnDel').show();
	$('#add_modal').modal('show');
}

//모달 닫기
const closeModal = function(){
	$('#add_modal').modal('hide');
}

//모달 초기화
const initModal = function(){
	$("#adapter_nm").val('');	
}

